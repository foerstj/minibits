[t:template,n:c24_3_crystal_archer_teal]
{
    specializes = c24_3_base_crystal_archer;

    aspect:textures:0 = b_i_cav_gems-01-static;  // teal
  	[common]
    {
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("ice_warrior");
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
			}
            // ADDED:
			[*]
			{
				condition* = receive_world_message("WE_ENTERED_WORLD");
				single_shot = true;
				no_trig_bits = true;
				action* = call_sfx_script("crystal_light_cyan(sgx)");
			}
		}
    }
    [inventory]
    {
    	[pcontent]
		{
			[all*]
			{
                es_shield_hand = c24_3_crystal_bow_teal;
			}
        }
    }
	[physics]
	{
		[break_particulate]
		{
			frag_c24_3_crystal_ice_01_teal = 2;
			frag_c24_3_crystal_ice_02_teal = 2;
