// Crystal Beast blast effects
{% for color in data %}
{% set r = color['R'] %}
{% set g = color['G'] %}
{% set b = color['B'] %}
{% set color01 = [r*0.1, g*0.1, b*0.1] | join(',') %}
{% set color02 = [r*0.2, g*0.2, b*0.2] | join(',') %}
{% set color04 = [r*0.4, g*0.4, b*0.4] | join(',') %}


[effect_script*]
{
	name	=crystal_beast_blast_c24_3_{{ color['color_name'] }};

	script	=[[
			sfx create fireb #SOURCE
				"must_update()dur(1)offset(0,0,.5)color0({{ color01 }})dark()velocity(0,3,150)
				accel(0,-30,-10)cvel(1)ts(.6)light_freq(0)alphafade(1)
				lower_r0(0)lower_r1(12)upper_r0(30)upper_r1(200)count(50)
				flamesize(6)";
			sfx friendly party #PEEK;
			sfx start #POP;
			
			call crystal_beast_blast_c24_3_{{ color['color_name'] }}_base s<bip01_r_finger0>;
			call crystal_beast_blast_c24_3_{{ color['color_name'] }}_base s<bip01_l_finger0>; 
			call rock_beast_blast_yell;

			pause 3;

			worldmsg WE_SPELL_SYNC_END #INVALID_GOID #OWNER_GOID #TARGET_GOID;

		]];
}

[effect_script*]
{
	name	=crystal_beast_blast_c24_3_{{ color['color_name'] }}_base;

	script	=[[
			sfx create fireb #SOURCE
				"must_update()dur(.8)offset(0,0,.5)color0({{ color02 }})dark()velocity(0,3,100)
				accel(0,-30,-10)cvel(1)ts(.6)light_freq(0)alphafade(1)
				lower_r0(0)lower_r1(6)upper_r0(10)upper_r1(200)count(50)
				flamesize(2)";
			sfx attach_point #PEEK [0] target;
			sfx friendly party #PEEK;
			sfx start #POP;

			sfx create fire #SOURCE
				"must_update()offset(0,0,0)dur(1)alphafade(2)count(5)flamesize(10)
				color0({{ color04 }})color1(0,0,0)velocity(0,1,20)accel(0,0,0)
				max_radius(8)max_displace(0)dark()grey_tex()";
			sfx attach_point #PEEK [0] target;
			sfx friendly party #PEEK;
			sfx start #POP;

			sfx create spawn #SOURCE
				"must_update()model(frag_c24_3_crystal_rock_beast_06_{{ color['color_name'] }})lvel(0,0,15)lvel_var(0,4,0)
				spawn_int(0.15)count(5)";
			sfx attach_point #PEEK [0] target;
			sfx friendly party #PEEK;
			sfx start #POP;

			sfx create spawn #SOURCE
				"must_update()model(frag_c24_3_crystal_rock_beast_07_{{ color['color_name'] }})lvel(0,0,15)lvel_var(0,4,0)
				spawn_int(0.15)count(5)";
			sfx attach_point #PEEK [0] target;
			sfx friendly party #PEEK;
			sfx start #POP;
            
			sfx create spawn #SOURCE
				"must_update()model(frag_c24_3_crystal_rock_beast_08_{{ color['color_name'] }})lvel(0,0,15)lvel_var(0,4,0)
				spawn_int(0.15)count(5)";	
			sfx attach_point #PEEK [0] target;
			sfx friendly party #PEEK;
			sfx start #POP;
		]];
}
{% endfor %}
