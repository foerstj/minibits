							value = #SRC_BASE_DEFENSE;
						}
					[*]
						{
							alteration = alter_max_life;
							duration = #infinite;
							value = #SRC_MAXLIFE;
						}
					[*]
						{
							alteration = alter_life;
							duration = 1.0;
							value = #SRC_MAXLIFE; //fully healed
						}
					[*]
						{
							alteration = alter_max_mana;
							duration = #infinite;
							value = #SRC_MAXMANA;
						}
					[*]
						{
							alteration = alter_mana;
							duration = 1.0;
							value = #SRC_MAXMANA;
						}
					[*]
						{
							alteration = alter_combat_magic;
							duration = #infinite;
							value = #SRC_MELEE;
