			required_level = 15;
			requires_line_of_sight = true;
			speed_bias = 1;
			target_type_flags = tt_terrain;
			usage_context_flags = uc_passive;

			[enchantments]
				{
					[*]
						{
							alteration = alter_strength;
							duration = #infinite;
							value = #SRC_STRENGTH;
						}
					[*]
						{
							alteration = alter_dexterity;
							duration = #infinite;
							value = #SRC_DEXTERITY;
