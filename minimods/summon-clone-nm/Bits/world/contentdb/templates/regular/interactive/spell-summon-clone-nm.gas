							value = #SRC_CMAGIC_DAMAGE_MIN;
						}
					[*]
						{
							alteration = alter_cmagic_damage_max;
							duration = #infinite;
							value = #SRC_CMAGIC_DAMAGE_MAX;
						}
					[*]
