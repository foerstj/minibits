[t:template,n:dsx_pack_animal]
{
	category_name = "1W_character";
	doc = "dsx_pack_animal";
	specializes = actor_good;
	[actor]
	{
		can_level_up = true;
		[skills]
		{
			strength =  11, 0;
			intelligence =  3, 0;
			dexterity =  8, 0;
		}
		portrait_icon = b_gui_ig_i_ic_na_pack_animal;
	}
	[aspect]
	{
		life = 300;
		max_life = 300;
		
		life_recovery_unit   = 1;
		life_recovery_period = 5;
		
		mana_recovery_unit   = 1;
		mana_recovery_period = 10;
		
		model = m_c_na_pa_03;	//_pos_1;
		gold_value = 200;
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_trunq; }
			[enemy_spotted]	{ priority = high; * = s_e_call_trunq_SED; }
			[hit_critical]	{ priority = low;	* = s_e_hit_trunq_SED;		}
			[hit_glance]	{ priority = low;	* = s_e_hit_trunq_SED;		}
			[hit_solid]		{ priority = low;	* = s_e_hit_trunq_SED;		}
			
		}
	}
	[attack]
	{
		attack_range = 0.5;
		damage_min = 5;
		damage_max = 10;
	}
	[body]
	{
		avg_move_velocity = 45.50000;  // EDITED: was 4.55
		[bone_translator]
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine1;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_pelvis;
			shield_bone = bip01_l_hand;
			weapon_bone = bip01_r_hand;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_na_pa_fs;
			[chore_attack]
			{
				chore_stances = 0;
				skrit = select_attack;
				[anim_files] { 00=at; }
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					atak=at;
				}
			}
			[chore_default]
			{
				chore_stances = 0;
				skrit = infinite_loop;
				[anim_files] { 00=ds; }
			}
			[chore_die]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0;
				skrit = select_fidget;
				[anim_files]
				{
					00 = dsf;
					
					00 = dsf-02;
					00 = dsf-03;
					00 = dsf-04;
				}
			}
			[chore_walk]
			{
				chore_stances = 0;
				skrit = select_walk;
				[anim_files] { 00=wl; }
			}
		}
	}
	[common]
	{
		membership = hero;
		screen_name = "Pack Animal";
		auto_expiration_class = never;
		forced_expiration_class = never;
	}
	[defend] { defense=12; }
	[inventory]
	{
		grid_height = 13;
		grid_width = 8;
		is_pack_only = true;
        is_nonaggressive_pack = false;
		
		[ranges]
		{
			0.33 = m_c_na_pa_02;
			0.66 = m_c_na_pa_01;
			1.00 = m_c_na_pa;
		}
		
	}
	[mind]
	{
		jat_attack_object_melee			= world\ai\jobs\common\job_attack_object_melee.skrit;
		jat_drink						= ; // This job is unassigned because mules can't (currently) drink
		on_enemy_spotted_attack 		= true;
		//actor_attacks_others_in_icz	= false;
		on_enemy_entered_ocz_flee		= false;		// different from pack mule
		inner_comfort_zone_range		= 3;
		outer_comfort_zone_range		= 8;
		personal_space_range			= 0.7;
		melee_engage_range				= 1;
		ranged_engage_range				= 2;
		sight_range						= 10;
		flee_distance					= 6;
		com_range						= 0;
	}
	[water_effects] {}
}
