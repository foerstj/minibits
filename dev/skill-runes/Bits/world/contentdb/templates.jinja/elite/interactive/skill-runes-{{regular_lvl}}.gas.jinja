[t:template,n:3W_skill_rune_melee_{{regular_lvl}}]
{
	specializes = base_skill_rune_melee;

    common:screen_name = "Melee Level {{elite_lvl}}";
	[skill_rune]
	{
		uber_stat	= {{elite_lvl}};
		melee_stat	= {{elite_lvl}};
		ranged_stat	= 0;
		cmagic_stat	= 0;
		nmagic_stat	= 0;
		int_stat	= {{'%0.2f' % (elite_lvl*0.09)}};
		dex_stat	= {{'%0.2f' % (elite_lvl*0.27)}};
		str_stat	= {{'%0.2f' % (elite_lvl*0.64)}};
	}
}

